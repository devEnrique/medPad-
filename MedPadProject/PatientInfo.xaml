<UserControl x:Class="MedPadProject.PatientInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedPadProject"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="gridPatient" >
        <StackPanel>
            <TextBlock x:Name="txtPatientName"></TextBlock>
            <TextBlock x:Name="txtAddress"></TextBlock>
            <TextBlock x:Name="txtPhone"></TextBlock>
            <TextBlock x:Name="txtEmail"></TextBlock>
            <TextBlock x:Name="txtDOB"></TextBlock>
            <TextBlock x:Name="txtmedicalHistory"></TextBlock>
            <TextBlock x:Name="txtDocName"></TextBlock>
            <TextBlock Visibility="Hidden" x:Name="docusername" ></TextBlock>

            <Button x:Name="btnBack" Click="btnBack_Click">Back</Button>
        </StackPanel>
        
        

    </Grid>
</UserControl>
